    <body>

      <main>
        <div class="container pt-5">
          <div class="row">
            <div class="col-12 card automatic" id="getStarted">
              <h3>Random Players From Hiscores</h3>
              <hr>
              <div id="output">

              </div>
            </div>
          </div>

          <script>
            function darkanAPI(url) {
              return new Promise((res, rej) => {
                let xhr = new XMLHttpRequest();
                xhr.open("GET", url);
                xhr.setRequestHeader("accept", "*/*");

                xhr.onreadystatechange = function () {
                  if (xhr.readyState === 4) {
                    res(JSON.parse(xhr.responseText));
                  }
                };
                xhr.send();
              });
            }

            function getUsernames(skill, page) {
              return new Promise(res => {
                darkanAPI(`https://darkan.org/api/highscores?page=${page}&skill=${skill}`).then(hiscores => {
                  res(hiscores.map(h => h.username));
                });
              });
            }

            function getCount(player) {
              return new Promise(res => {
                darkanAPI(`https://darkan.org/api/player/${player}/count`).then(counts => {
                  res(counts);
                });
              });
            }

            let totalChopped = {};
            getUsernames("Woodcutting", 0).then(usernames => usernames.forEach(username => getCount(username).then(counts => {
              for (count in counts) {
                if (count.includes("chopped")) {
                  if (!totalChopped[count]) totalChopped[count] = 0;
                  totalChopped[count] += counts[count];
                }
              }
              let output = "";
              for (row in totalChopped) {
                output += `${row}\t${totalChopped[row]}<br>`;
              }
              document.getElementById("output").innerHTML = output;
            })));
          </script>

